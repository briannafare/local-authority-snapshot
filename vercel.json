{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npx vite build && npx esbuild server/vercel-trpc.ts --bundle --platform=node --format=esm --packages=external --outfile=api/trpc/handler.mjs",
  "outputDirectory": "dist/public",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/trpc/handler"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
